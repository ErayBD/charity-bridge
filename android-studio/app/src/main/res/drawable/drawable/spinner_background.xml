<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape>
                    <solid android:color="#FFFFFF"/> <!-- İçerik rengi, burada beyaz olarak ayarlanmış -->
                    <stroke android:color="#3DDC84" android:width="1dp"/> <!-- Sınır rengi ve kalınlığı, burada siyah ve 2dp olarak ayarlanmış -->
                    <corners android:radius="8dp"/> <!-- Kenar yuvarlatma, burada 8dp olarak ayarlanmış -->
                </shape>
            </item>

            <item
                android:width="40dp"
                android:height="40dp"
                android:drawable="@drawable/ic_arrow_drop_down_black_24dp"
                android:gravity="center_vertical|right" />
        </layer-list>
    </item>
</selector>