<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <ImageView
        android:id="@+id/top_icon"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="top_icon"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_icon"
        />

    <TextView
        android:id="@+id/tv_topleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="60dp"
        android:text="Receive"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/rc_ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/top_icon">

        <TextView
            android:id="@+id/rc_tv_sptype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Donate Type"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dt_tv_donatetype"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/text_border_background"
            android:ems="10"
            android:enabled="false"
            android:hint=""
            android:inputType="phone"
            android:padding="12dp"
            android:textColor="#707070"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/rc_tv_descp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp"
            android:text="Description ---"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rc_tv_sploc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:text="Locations"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/rc_ll_sploc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dt_tv_city"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@drawable/text_border_background"
                android:ems="10"
                android:enabled="false"
                android:hint=""
                android:inputType="phone"
                android:padding="12dp"
                android:textColor="#707070"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dt_tv_branch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@drawable/text_border_background"
                android:ems="10"
                android:enabled="false"
                android:hint=""
                android:inputType="phone"
                android:padding="12dp"
                android:textColor="#707070"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rc_bt_loc"
                style="@android:style/Widget.Button"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:background="@drawable/maps" />

        </LinearLayout>

        <TextView
            android:id="@+id/rc_tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:text="Date of Receipt"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/rc_ll_spdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/rc_et_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/text_border_background"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="14dp"
                android:textColor="#707070"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rc_bt_date"
                style="@android:style/Widget.Button"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:background="@drawable/calendar" />

        </LinearLayout>

        <TextView
            android:id="@+id/dt_tv_id_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery ID"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/dt_tv_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/text_border_background"
            android:ems="10"
            android:enabled="false"
            android:hint=""
            android:inputType="phone"
            android:padding="12dp"
            android:textColor="#707070"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rc_bt_continue"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_background"
            android:text="Create"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>